<h2>Edit a Movie</h2>
<form action="/movies/edit/{{selectedMovie._id}}" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{selectedMovie.title}}">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre" value="{{selectedMovie.genre}}">

  <label for="plot">Plot:</label>
  <input type="text" name="plot" id="plot" value="{{selectedMovie.plot}}">

  <label for="cast">Cast:</label>
  <select name="cast" id="cast" multiple>
  {{#each allCelebs}}
   
    <option value="{{this._id}}" selected>{{this.name}}</option>

  {{/each}}
  </select>


  <button type="submit">edit Movie</button>
</form>